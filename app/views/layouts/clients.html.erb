      <div id="client">
        <%= yield %>
      </div>
    </div>
    
    <div id="footer">
      <div class="col1">
        <%= link_to "New", "/clients/new" %>
      </div>
      <div class="col2"></div>
      <div class="col3">
        <%= link_to "Logout?", "/logout" %>
