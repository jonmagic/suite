<h3>New Ticket Entry</h3>
<% form_for @ticket_entry do |f| %>
  <table class="m">
    <tr>
      <td class="first">Entry Type</td><td><%= f.select :entry_type, ["Work Done", "Research"] %></td>
    </tr>
    <tr>
      <td class="first">Time Spent</td><td><%= f.text_field :time, :title => "minutes" %></td>
    </tr>
    <tr>
      <td class="first">Labor Type</td><td><%= f.select :labor_type, ["Onsite", "Instore", "Remote", "System Build"] %></td>
    </tr>
    <tr>
      <td class="first">Billable</td><td><%= f.check_box :billable %></td>
    </tr>
    <tr>
      <td class="first">Private</td><td><%= f.check_box :private %></td>
    </tr>
  </table>
  <p class="new_ticket_entry_note"><%= f.text_area :note %></p>
  <%= f.hidden_field :detail, :value => 1 %>
  <%= f.hidden_field :ticket_id, :value => params[:ticket_id] %>
  <%= f.hidden_field :creator_id, :value => current_user.id %>
  <p><%= f.submit "Save" %></p>
<% end %>